{
  "compilerOptions": {
      "target": "es5",
      "lib": ["es2017"],
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "sourceMap": true,
      "noLib": false,
      "preserveConstEnums": true,
      "declaration": true,
      "suppressImplicitAnyIndexErrors": true,
      "outDir": "./dist"
  },
  "filesGlob": [
      "./**/*.ts",
      "!./node_modules/**/*.ts"
  ],
  "files": [
      "./src/index.ts"
  ]
}